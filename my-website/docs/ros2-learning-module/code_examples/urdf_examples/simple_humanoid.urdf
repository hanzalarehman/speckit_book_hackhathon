<?xml version="1.0"?>
<robot name="simple_humanoid">

  <!-- MATERIALS -->
  <material name="white">
    <color rgba="1 1 1 1" />
  </material>
  <material name="black">
    <color rgba="0 0 0 1" />
  </material>
  <material name="blue">
    <color rgba="0 0 1 1" />
  </material>
  <material name="red">
    <color rgba="1 0 0 1" />
  </material>
  <material name="green">
    <color rgba="0 1 0 1" />
  </material>

  <!-- BASE LINK (Torso) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.1 0.3" />
      </geometry>
      <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.1 0.3" />
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
  </link>

  <!-- HEAD -->
  <joint name="torso_to_head_joint" type="fixed">
    <parent link="base_link" />
    <child link="head_link" />
    <origin xyz="0 0 0.15" rpy="0 0 0" />
  </joint>
  <link name="head_link">
    <visual>
      <geometry>
        <sphere radius="0.08" />
      </geometry>
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.08" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
    </inertial>
  </link>

  <!-- LEFT ARM -->
  <joint name="torso_to_left_shoulder_joint" type="revolute">
    <parent link="base_link" />
    <child link="left_upper_arm_link" />
    <origin xyz="0 0.1 0.1" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0" />
  </joint>
  <link name="left_upper_arm_link">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.15" />
      </geometry>
      <origin xyz="0 0 -0.075" rpy="0 0 0" />
      <material name="red" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.15" />
      </geometry>
      <origin xyz="0 0 -0.075" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="0.2" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
  </link>

  <joint name="left_elbow_joint" type="revolute">
    <parent link="left_upper_arm_link" />
    <child link="left_forearm_link" />
    <origin xyz="0 0 -0.15" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="0" upper="2.5" effort="10" velocity="1.0" />
  </joint>
  <link name="left_forearm_link">
    <visual>
      <geometry>
        <cylinder radius="0.015" length="0.12" />
      </geometry>
      <origin xyz="0 0 -0.06" rpy="0 0 0" />
      <material name="green" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.015" length="0.12" />
      </geometry>
      <origin xyz="0 0 -0.06" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="0.15" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.00005" ixy="0" ixz="0" iyy="0.00005" iyz="0" izz="0.00005" />
    </inertial>
  </link>

  <!-- RIGHT ARM (mirror of left) -->
  <joint name="torso_to_right_shoulder_joint" type="revolute">
    <parent link="base_link" />
    <child link="right_upper_arm_link" />
    <origin xyz="0 -0.1 0.1" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0" />
  </joint>
  <link name="right_upper_arm_link">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.15" />
      </geometry>
      <origin xyz="0 0 -0.075" rpy="0 0 0" />
      <material name="red" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.15" />
      </geometry>
      <origin xyz="0 0 -0.075" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="0.2" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
  </link>

  <joint name="right_elbow_joint" type="revolute">
    <parent link="right_upper_arm_link" />
    <child link="right_forearm_link" />
    <origin xyz="0 0 -0.15" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="0" upper="2.5" effort="10" velocity="1.0" />
  </joint>
  <link name="right_forearm_link">
    <visual>
      <geometry>
        <cylinder radius="0.015" length="0.12" />
      </geometry>
      <origin xyz="0 0 -0.06" rpy="0 0 0" />
      <material name="green" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.015" length="0.12" />
      </geometry>
      <origin xyz="0 0 -0.06" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="0.15" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.00005" ixy="0" ixz="0" iyy="0.00005" iyz="0" izz="0.00005" />
    </inertial>
  </link>

  <!-- LEFT LEG -->
  <joint name="torso_to_left_hip_joint" type="revolute">
    <parent link="base_link" />
    <child link="left_upper_leg_link" />
    <origin xyz="0 0.05 -0.15" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="-0.5" upper="0.5" effort="20" velocity="0.5" />
  </joint>
  <link name="left_upper_leg_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.2" />
      </geometry>
      <origin xyz="0 0 -0.1" rpy="0 0 0" />
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.2" />
      </geometry>
      <origin xyz="0 0 -0.1" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="0.3" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.0003" ixy="0" ixz="0" iyy="0.0003" iyz="0" izz="0.0003" />
    </inertial>
  </link>

  <joint name="left_knee_joint" type="revolute">
    <parent link="left_upper_leg_link" />
    <child link="left_lower_leg_link" />
    <origin xyz="0 0 -0.2" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="-2.0" upper="0.0" effort="20" velocity="0.5" />
  </joint>
  <link name="left_lower_leg_link">
    <visual>
      <geometry>
        <cylinder radius="0.025" length="0.18" />
      </geometry>
      <origin xyz="0 0 -0.09" rpy="0 0 0" />
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.025" length="0.18" />
      </geometry>
      <origin xyz="0 0 -0.09" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="0.25" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.0002" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0002" />
    </inertial>
  </link>

  <!-- RIGHT LEG (mirror of left) -->
  <joint name="torso_to_right_hip_joint" type="revolute">
    <parent link="base_link" />
    <child link="right_upper_leg_link" />
    <origin xyz="0 -0.05 -0.15" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="-0.5" upper="0.5" effort="20" velocity="0.5" />
  </joint>
  <link name="right_upper_leg_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.2" />
      </geometry>
      <origin xyz="0 0 -0.1" rpy="0 0 0" />
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.2" />
      </geometry>
      <origin xyz="0 0 -0.1" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="0.3" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.0003" ixy="0" ixz="0" iyy="0.0003" iyz="0" izz="0.0003" />
    </inertial>
  </link>

  <joint name="right_knee_joint" type="revolute">
    <parent link="right_upper_leg_link" />
    <child link="right_lower_leg_link" />
    <origin xyz="0 0 -0.2" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="-2.0" upper="0.0" effort="20" velocity="0.5" />
  </joint>
  <link name="right_lower_leg_link">
    <visual>
      <geometry>
        <cylinder radius="0.025" length="0.18" />
      </geometry>
      <origin xyz="0 0 -0.09" rpy="0 0 0" />
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.025" length="0.18" />
      </geometry>
      <origin xyz="0 0 -0.09" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="0.25" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.0002" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0002" />
    </inertial>
  </link>

</robot>
